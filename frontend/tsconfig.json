{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    "allowJs": true,
    "checkJs": false,

    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "noEmit": true,

    "jsx": "react-jsx",

    "baseUrl": ".",                       // ✅ REQUIRED
    "paths": {
      "@/*": ["src/*"]                    // ✅ no ./ here
    },

    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "build"]
}
